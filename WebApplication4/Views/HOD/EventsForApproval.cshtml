@model List<WebApplication4.Models.EVENT>

@{
    Layout = "~/Views/Shared/_HodLayout.cshtml";
    ViewBag.Title = "Events Pending HOD Approval";
}

<h2 class="mb-3">Events Awaiting Your Approval</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No event requests found for your department.</div>
}
else
{
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Event Name</th>
                <th>Club</th>
                <th>Date</th>
                <th class="text-center">Event Document</th>
                <th class="text-center">Signed Form / Approve</th>
                <th class="text-center">Reject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model)
            {
                <tr>
                    <td>@ev.EventName</td>
                    <td>@ev.CLUB.ClubName</td>
                    <td>@ev.EventStartDateAndTime.ToString("dd MMM yyyy")</td>

                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(ev.BudgetDocumentPath))
                        {
                            <a href="@Url.Action("ViewEventDocument", "HOD", new { id = ev.EventID })"
                               class="btn btn-sm btn-info">
                                📄 View Document
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No doc</span>
                        }
                    </td>

                    <td class="text-center">
                        <button type="button"
                                class="btn btn-sm btn-success"
                                data-bs-toggle="modal"
                                data-bs-target="#approveModal_@ev.EventID">
                            ✅ Approve / Upload
                        </button>

                        @if (!string.IsNullOrEmpty(ev.ApprovedAmount) &&
                             ev.ApprovedAmount != ev.EventBudget)
                        {
                            <span class="badge bg-warning text-dark ms-1"
                                  title="Budget reduced from ₹@ev.EventBudget to ₹@ev.ApprovedAmount">
                                Reduced Budget
                            </span>
                        }
                    </td>

                    <td>
                        @using (Html.BeginForm("RejectEvent", "HOD", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken() <!-- Add this line -->
                            @Html.Hidden("eventId", ev.EventID)
                            <input type="text"
                                   name="rejectionReason"
                                   class="form-control mb-1"
                                   placeholder="Reason..." required />

                            <button type="submit"
                                    class="btn btn-danger btn-sm w-100">
                                Reject
                            </button>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <!-- Modals for each event -->
    foreach (var ev in Model)
    {
        <div class="modal fade" id="approveModal_@ev.EventID" tabindex="-1" aria-labelledby="approveModalLabel_@ev.EventID" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">

                    @using (Html.BeginForm("ApproveEvent", "HOD", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("eventId", ev.EventID)

                        <div class="modal-header">
                            <h5 class="modal-title" id="approveModalLabel_@ev.EventID">
                                Approve: @ev.EventName
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Proposed Budget</label>
                                <input type="text" class="form-control" value="₹@ev.EventBudget" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Approved Budget (optional)</label>
                                <input type="number"
                                       name="approvedAmount"
                                       class="form-control"
                                       min="0"
                                       step="100"
                                       placeholder="Enter revised budget if lower" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Upload Signed Approval Document (PDF)</label>
                                <input type="file"
                                       name="signedDocument"
                                       class="form-control"
                                       accept=".pdf"
                                       required />
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button"
                                    class="btn btn-secondary"
                                    data-bs-dismiss="modal">
                                Cancel
                            </button>
                            <button type="submit"
                                    class="btn btn-primary">
                                Approve & Upload
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}

<!-- Bootstrap JS (if not already included) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Approve confirmation for all modals
    document.querySelectorAll('form[action$="ApproveEvent"]').forEach(function (form) {
        form.addEventListener('submit', function (e) {
            if (!confirm("Are you sure you want to approve this event and upload the document?")) {
                e.preventDefault(); // Cancel submission if user clicks "Cancel"
            }
        });
    });

    // Reject confirmation for all reject forms
    document.querySelectorAll('form[action$="RejectEvent"]').forEach(function (form) {
        form.addEventListener('submit', function (e) {
            if (!confirm("Are you sure you want to reject this event?")) {
                e.preventDefault(); // Cancel submission if user clicks "Cancel"
            }
        });
    });
</script>
