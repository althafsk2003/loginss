@model List<WebApplication4.Models.EVENT>

@{
    Layout = "~/Views/Shared/_HodLayout.cshtml";
    ViewBag.Title = "Events Pending HOD Approval";
}

<h2 class="mb-3">Events Awaiting Your Approval</h2>

@if (!Model.Any())
{
    <p>No event requests found for your department.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Event Name</th>
                <th>Club</th>
                <th>Date</th>
                <th>Budget Document</th>
                <th>Approve</th>
                <th>Reject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model)
            {
                <tr>
                    <td>@ev.EventName</td>
                    <td>@ev.CLUB.ClubName</td>
                    <td>@ev.EventStartDateAndTime.ToString("dd MMM yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(ev.BudgetDocumentPath))
                        {
                            <a href="@Url.Action("DownloadEventForm", "HOD", new { id = ev.EventID })"
                               class="btn btn-sm btn-primary" download>
                                📥 Download Event Form
                            </a>
                            <a href="@Url.Content(ev.BudgetDocumentPath)"
                               target="_blank"
                               class="btn btn-sm btn-outline-secondary ms-2">
                                👁️ Preview
                            </a>
                        }
                        else
                        {
                            <span>No document uploaded</span>
                        }
                    </td>
                    <td>
                        @if (string.IsNullOrEmpty(ev.EventFormPath))
                        {
                            <a href="@Url.Action("GenerateDocument", "HOD", new { id = ev.EventID })" class="btn btn-sm btn-warning">
                                Generate Document
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Content(ev.EventFormPath)" target="_blank" class="btn btn-sm btn-outline-primary">
                                📄 View Approval Form
                            </a>
                        }
                    </td>

                    <td>
                        @using (Html.BeginForm("RejectEvent", "HOD", FormMethod.Post))
                        {
                            @Html.Hidden("eventId", ev.EventID)
                            <input type="text" name="rejectionReason" class="form-control mb-1" placeholder="Reason..." required />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
