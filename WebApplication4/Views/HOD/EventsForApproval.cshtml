@model List<WebApplication4.Models.EVENT>

@{
    ViewBag.Title = "Events Pending HOD Approval";
    Layout = "~/Views/Shared/_HodLayout.cshtml";
}

<h2 class="mb-3">Events Awaiting Your Approval</h2>

@if (!Model.Any())
{
    <p>No event requests found for your department.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Event Name</th>
                <th>Club</th>
                <th>Date</th>
                <th>Download Form</th>
                <th>Approve</th>
                <th>Reject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model)
            {
                <tr>
                    <td>@ev.EventName</td>
                    <td>@ev.Club?.ClubName</td>
                    <td>@ev.EventStartDateAndTime.ToString("dd MMM yyyy")</td>
                    <td>
                        <a href="@Url.Action("ViewEventDetails", "HOD", new { id = ev.EventID })" class="btn btn-sm btn-info">
                            Click here to view more
                        </a>
                    </td>

                    <td>
                        @using (Html.BeginForm("ApproveEvent", "HOD", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.Hidden("eventId", ev.EventID)
                            <input type="file" name="approvedForm" class="form-control mb-1" required />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("RejectEvent", "HOD", FormMethod.Post))
                        {
                            @Html.Hidden("eventId", ev.EventID)
                            <input type="text" name="rejectionReason" class="form-control mb-1" placeholder="Reason..." required />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


