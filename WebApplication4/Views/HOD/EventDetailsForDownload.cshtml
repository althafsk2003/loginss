@model WebApplication4.Models.EVENT
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Event Details</title>
    <style>
        body {
            font-family: Arial;
            margin: 20px;
        }

        h2 {
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }

        .section {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h2>@Model.EventName</h2>

    <div class="section">
        <strong>Date:</strong> @Model.EventStartDateAndTime.ToString("dd MMM yyyy")<br />
    </div>

    <div class="section">
        <h3>Description</h3>
        <p>@Model.EventDescription</p>
    </div>

    <div class="section">
        <h3>Budget Details</h3>
        @if (!string.IsNullOrEmpty(Model.BudgetDocumentPath))
        {
            <p>
                <strong>Attached Budget Document:</strong>
                <a href="@Url.Content(Model.BudgetDocumentPath)" target="_blank">View Budget File</a>
            </p>
        }
    </div>
</body>
</html>
