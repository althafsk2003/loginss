@model List<WebApplication4.Models.USER>

@{
    Layout = "~/Views/Shared/_HodLayout.cshtml";
    ViewBag.Title = "View Mentors";
}

@*<h2 class="text-center mb-4">@ViewBag.Title</h2>*@

<!-- ✅ Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<!-- Heading + Filter Buttons Container -->
<div class="d-flex align-items-center mb-4 gap-3">
    <h2 class="mb-0">@ViewBag.Title</h2>
    <div>
        <a href="@Url.Action("ViewMentors", "HOD")" class="btn btn-primary btn-sm">View All Mentors</a>
        <a href="@Url.Action("ViewActiveMentors", "HOD")" class="btn btn-success btn-sm">View Active Mentors</a>
        <a href="@Url.Action("ViewDeactivatedMentors", "HOD")" class="btn btn-danger btn-sm">View Deactivated Mentors</a>
    </div>
</div>


<!-- ✅ Mentors Table -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Mentor Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var mentor in Model)
        {
            <tr>
                <td>@mentor.FirstName @mentor.LastName</td>
                <td>@mentor.Email</td>
                <td>@mentor.MobileNumber</td>
                <td>
                    @if (mentor.IsActive == true)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Inactive</span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>


<!-- ✅ CSS Styling -->
<style>
    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .table th {
            text-align: center;
            background-color: #343a40;
            color: white;
            padding: 12px;
        }

        .table td {
            text-align: center;
            padding: 10px;
        }

    .alert-success {
        font-size: 16px;
        font-weight: bold;
        color: green;
        text-align: center;
    }

    .btn {
        margin: 5px;
    }
</style>
