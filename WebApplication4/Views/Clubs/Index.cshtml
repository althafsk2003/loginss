    <script>
        // Intersection Observer for Animation Trigger
        document.addEventListener('DOMContentLoaded', () => {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        // Animate cards individually with delay
                        if (entry.target.classList.contains('card-grid')) {
                            const cards = entry.target.querySelectorAll('.card, .wide-image');
                            cards.forEach((card, index) => {
                                setTimeout(() => {
                                    card.classList.add('visible');
                                }, index * 100);
                            });
                        }
                        // Animate footer route map
                        if (entry.target.classList.contains('footer')) {
                            const routeMap = document.querySelector('.route-map-container');
                            if (routeMap) {
                                routeMap.classList.add('visible');
                            }
                        }
                        // Animate founder image
                        if (entry.target.classList.contains('founder-profile')) {
                            const founderImage = entry.target.querySelector('.founder-image-box img');
                            if (founderImage) {
                                founderImage.classList.add('visible');
                            }
                        }
                        // Animate guide video container
                        if (entry.target.classList.contains('guide-video-section')) {
                            const videoContainer = entry.target.querySelector('.guide-video-container');
                            if (videoContainer) {
                                videoContainer.classList.add('visible');
                            }
                        }
                        // Animate modal image
                        if (entry.target.classList.contains('stylish-modal')) {
                            const modalImage = entry.target.querySelector('.image-gallery img');
                            if (modalImage) {
                                modalImage.classList.add('visible');
                            }
                        }
                    } else {
                        // Reset visibility to allow re-animation
                        entry.target.classList.remove('visible');
                        if (entry.target.classList.contains('card-grid')) {
                            const cards = entry.target.querySelectorAll('.card, .wide-image');
                            cards.forEach((card) => {
                                card.classList.remove('visible');
                            });
                        }
                        if (entry.target.classList.contains('footer')) {
                            const routeMap = document.querySelector('.route-map-container');
                            if (routeMap) {
                                routeMap.classList.remove('visible');
                            }
                        }
                        if (entry.target.classList.contains('founder-profile')) {
                            const founderImage = entry.target.querySelector('.founder-image-box img');
                            if (founderImage) {
                                founderImage.classList.remove('visible');
                            }
                        }
                        if (entry.target.classList.contains('guide-video-section')) {
                            const videoContainer = entry.target.querySelector('.guide-video-container');
                            if (videoContainer) {
                                videoContainer.classList.remove('visible');
                            }
                        }
                        if (entry.target.classList.contains('stylish-modal')) {
                            const modalImage = entry.target.querySelector('.image-gallery img');
                            if (modalImage) {
                                modalImage.classList.remove('visible');
                            }
                        }
                    }
                });
            }, { threshold: 0.1, rootMargin: '0px 0px -10% 0px' });

            // Observe elements
            const elements = document.querySelectorAll('.top-nav, .navbar, .hero-text, .hero-video, .card-grid, .founder-profile, .guide-video-section, .footer, .stylish-modal');
            elements.forEach(element => observer.observe(element));

            // Handle scroll events for fixed nav
            const topNav = document.querySelector('.top-nav');
            const navbar = document.querySelector('.navbar');
            const navbarPlaceholder = document.querySelector('.navbar-placeholder');
            const progressLine = document.querySelector('.progress-line');
            const topNavHeight = topNav.offsetHeight;
            const navbarHeight = navbar.offsetHeight;

            document.documentElement.style.setProperty('--navbar-height', `${navbarHeight}px`);
            window.addEventListener('scroll', () => {
                const scrollPosition = window.scrollY;
                const windowHeight = window.innerHeight;
                const documentHeight = document.body.scrollHeight;
                const scrollPercentage = (scrollPosition / (documentHeight - windowHeight)) * 100;

                const opacity = 1 - (scrollPosition / 50);
                topNav.style.opacity = Math.max(0, opacity);

                if (scrollPosition > topNavHeight) {
                    topNav.classList.add('fixed');
                    navbar.classList.add('fixed');
                    navbarPlaceholder.classList.add('active');
                } else {
                    topNav.classList.remove('fixed');
                    navbar.classList.remove('fixed');
                    navbarPlaceholder.classList.remove('active');
                }

                progressLine.style.width = `${Math.min(100, scrollPercentage)}%`;
            });

            // Smooth scroll for Guide link
            document.querySelector('a[href="#guide-video"]').addEventListener('click', (e) => {
                e.preventDefault();
                const target = document.querySelector('#guide-video');
                const navbarHeight = document.querySelector('.navbar').offsetHeight;
                const targetPosition = target.getBoundingClientRect().top + window.scrollY - navbarHeight;
                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
            });

            // Ensure modal animations on show
            const founderModal = document.querySelector('#founderModal');
            founderModal.addEventListener('show.bs.modal', () => {
                const modalContent = founderModal.querySelector('.stylish-modal');
                observer.observe(modalContent);
            });
        });

        function startProcess() {
            alert("Starting Clubs Process...");
        }
    </script>
