@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Custom CSS -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
            flex: 1;
        }

        /* Top Navigation Bar */
        .top-nav {
            background: #111;
            color: white;
            padding: 8px 0;
            font-size: 14px;
            text-align: center;
            width: 100%;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
            position: relative;
            z-index: 1002;
        }

            .top-nav.visible {
                opacity: 1;
                transform: translateY(0);
                animation: pulse 2s infinite;
            }

            .top-nav.fixed {
                position: fixed;
                top: 0;
            }

            .top-nav.fade {
                opacity: 0;
            }

        /* Main Navigation */
        .navbar {
            background: white;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            z-index: 1001;
            position: relative;
            transition: all 0.3s ease;
            margin-top: 2px;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .navbar.visible {
                opacity: 1;
                transform: translateY(0);
            }

            .navbar.fixed {
                position: fixed;
                top: 0;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                margin-top: 0;
            }

        /* Progress Line */
        .progress-line {
            height: 4px;
            background: #E96C20;
            width: 0;
            position: absolute;
            top: 0;
            left: 0;
            transition: width 0.1s ease;
            animation: glow 1.5s infinite alternate;
        }

        /* Placeholder to prevent content jump */
        .navbar-placeholder {
            display: none;
            height: 0;
        }

            .navbar-placeholder.active {
                display: block;
                height: var(--navbar-height, 60px);
            }

        .navbar-brand {
            font-size: 26px;
            font-weight: bold;
            color: #E96C20;
            transition: transform 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        .navbar-nav .nav-link {
            font-weight: 600;
            color: #333;
            transition: all 0.3s ease;
            padding: 10px 15px;
            position: relative;
        }

            .navbar-nav .nav-link:hover {
                color: #E96C20;
                transform: translateY(-2px);
            }

        .dropdown-menu {
            display: none;
            opacity: 0;
            transform: translateY(15px);
            transition: all 0.3s ease-in-out;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            z-index: 1002;
        }

        .nav-item:hover .dropdown-menu {
            display: block;
            opacity: 1;
            transform: translateY(0);
            animation: slideIn 0.3s ease;
        }

        /* Hero Section */
        .hero {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: visible;
            z-index: 1;
        }

        .hero-video {
            width: 100%;
            height: 72%;
            object-fit: cover;
            transition: transform 0.5s ease;
            opacity: 0;
            transform: scale(0.95);
        }

            .hero-video.visible {
                opacity: 1;
                transform: scale(1);
            }

            .hero-video:hover {
                transform: scale(1.02);
            }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 70%;
            background: rgba(0, 0, 0, 0.5);
            transition: opacity 0.5s ease;
        }

        .hero-text {
            position: absolute;
            bottom: 160px;
            left: 32%;
            transform: translateX(-50%);
            background: orange;
            color: white;
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            padding: 20px 70px;
            border-radius: 5px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            pointer-events: none;
            opacity: 0;
            transform: translate(-50%, 20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .hero-text.visible {
                opacity: 1;
                transform: translate(-50%, 0);
                animation: pulse 2s infinite;
            }

        /* Card Grid Section */
        .card-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 20px;
            padding: 40px;
            margin-bottom: 60px;
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .card-grid.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .wide-image {
            grid-column: span 2;
            opacity: 0;
            transform: scale(0.9);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .wide-image.visible {
                opacity: 1;
                transform: scale(1);
            }

            .wide-image img {
                width: 100%;
                height: 253px;
                object-fit: cover;
                display: block;
                border-radius: 0;
            }

        .card {
            position: relative;
            overflow: hidden;
            height: 220px;
            border-radius: 0;
            cursor: pointer;
            transition: transform 0.2s ease;
            opacity: 0;
            transform: scale(0.9);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .card.visible {
                opacity: 1;
                transform: scale(1);
                animation: cardPop 0.5s ease;
            }

            .card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
                transition: transform 0.4s ease;
                border-radius: 0;
            }

            .card:hover img {
                transform: scale(1.05);
            }

            .card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(255, 102, 0, 0.3);
                opacity: 0;
                transition: opacity 0.3s ease;
                z-index: 1;
            }

            .card:hover::before {
                opacity: 1;
            }

        .card-text {
            position: absolute;
            bottom: 0;
            color: white;
            width: 100%;
            padding: 6px 10px;
            font-weight: bold;
            font-size: 0.9rem;
            z-index: 2;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.8);
            background: none;
            transition: transform 0.3s ease;
        }

        .card:hover .card-text {
            transform: translateY(-5px);
        }

        /* Founder's Note Section */
        .founder-profile {
            width: 100%;
            min-height: 70vh;
            margin: 0 0 60px 0;
            padding: 40px 50px;
            background: linear-gradient(135deg, #f5f7fa 0%, #ffffff 100%);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: flex-start;
            gap: 40px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative;
            overflow-y: auto;
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .founder-profile.visible {
                opacity: 1;
                transform: translateY(0);
                animation: slideInLeft 0.5s ease;
            }

        .founder-image-box {
            flex: 0 0 300px;
            position: relative;
            text-align: center;
            max-height: 100%;
        }

            .founder-image-box img {
                width: 100%;
                border-radius: 10px;
                border: 4px solid #e44d26;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                opacity: 0;
                transform: scale(0.9);
            }

                .founder-image-box img.visible {
                    opacity: 1;
                    transform: scale(1);
                }

                .founder-image-box img:hover {
                    transform: scale(1.05);
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
                }

        .founder-details {
            margin-top: 15px;
            color: #333;
            transition: transform 0.3s ease;
        }

            .founder-details:hover {
                transform: translateY(-5px);
            }

        .founder-name {
            font-size: 1.5rem;
            font-weight: 600;
            color: #e44d26;
            margin: 0;
        }

        .founder-details small {
            font-size: 1rem;
            color: #666;
        }

        .founder-text-box {
            flex: 1;
            padding-left: 20px;
            max-width: 70%;
        }

            .founder-text-box h2 {
                font-size: 2.5rem;
                color: #2c3e50;
                margin-bottom: 20px;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 1px;
                position: relative;
                transition: color 0.3s ease;
            }

                .founder-text-box h2:hover {
                    color: #e44d26;
                }

                .founder-text-box h2::after {
                    content: '';
                    position: absolute;
                    bottom: -5px;
                    left: 0;
                    width: 60px;
                    height: 3px;
                    background: #e44d26;
                    transition: width 0.3s ease;
                }

                .founder-text-box h2:hover::after {
                    width: 120px;
                }

        .quote-mark {
            font-size: 50px;
            line-height: 0.5;
            color: #e44d26;
            float: left;
            margin-right: 15px;
            margin-top: 5px;
            transition: transform 0.3s ease;
        }

        .founder-text-box:hover .quote-mark {
            transform: scale(1.1);
        }

        .founder-quote {
            font-size: 16px;
            line-height: 1.8;
            color: #34495e;
            margin-top: 5px;
            font-style: italic;
            clear: both;
            transition: opacity 0.3s ease;
        }

        .founder-text-box:hover .founder-quote {
            opacity: 0.8;
        }

        /* Guide Video Section */
        .guide-video-section {
            width: 100%;
            padding: 40px 50px;
            background: linear-gradient(135deg, #f5f7fa 0%, #ffffff 100%);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            margin: 0 0 60px 0;
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .guide-video-section.visible {
                opacity: 1;
                transform: translateY(0);
                animation: slideInRight 0.5s ease;
            }

            .guide-video-section h2 {
                font-size: 2.5rem;
                color: #2c3e50;
                margin-bottom: 20px;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 1px;
                position: relative;
                text-align: center;
                transition: color 0.3s ease;
            }

                .guide-video-section h2:hover {
                    color: #e44d26;
                }

                .guide-video-section h2::after {
                    content: '';
                    position: absolute;
                    bottom: -5px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 60px;
                    height: 3px;
                    background: #e44d26;
                    transition: width 0.3s ease;
                }

                .guide-video-section h2:hover::after {
                    width: 120px;
                }

            .guide-video-section p {
                font-size: 1.1rem;
                color: #34495e;
                margin-bottom: 30px;
                text-align: center;
                max-width: 800px;
                margin-left: auto;
                margin-right: auto;
                transition: opacity 0.3s ease;
            }

            .guide-video-section:hover p {
                opacity: 0.8;
            }

        .guide-video-container {
            max-width: 800px;
            margin: 0 auto;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
            opacity: 0;
            transform: scale(0.9);
        }

            .guide-video-container.visible {
                opacity: 1;
                transform: scale(1);
            }

            .guide-video-container:hover {
                transform: scale(1.02);
            }

            .guide-video-container video {
                width: 100%;
                height: auto;
                display: block;
            }

        /* Buttons */
        .btn-custom {
            display: inline-block;
            padding: 12px 25px;
            background: linear-gradient(90deg, #e44d26, #ff7f50);
            color: white;
            font-weight: 600;
            text-decoration: none;
            border-radius: 25px;
            transition: all 0.3s ease;
            margin-top: 20px;
            position: relative;
            overflow: hidden;
        }

            .btn-custom::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.3s ease;
            }

            .btn-custom:hover::before {
                left: 100%;
            }

            .btn-custom:hover {
                background: linear-gradient(90deg, #ff7f50, #e44d26);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(228, 77, 38, 0.4);
            }

        .btn-gradient {
            background: linear-gradient(90deg, #e44d26, #ff7f50);
            color: #fff;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 25px;
            border: none;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-gradient::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.3s ease;
            }

            .btn-gradient:hover::before {
                left: 100%;
            }

            .btn-gradient:hover {
                background: linear-gradient(90deg, #ff7f50, #e44d26);
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(228, 77, 38, 0.3);
            }

        /* Modal Styling */
        .stylish-modal {
            border-radius: 16px;
            border: none;
            padding: 20px 30px;
            background: #fff;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            font-family: 'Segoe UI', sans-serif;
            animation: modalPop 0.4s ease;
        }

        .modal-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #e44d26;
            margin-bottom: 10px;
            text-transform: uppercase;
            transition: color 0.3s ease;
        }

            .modal-title:hover {
                color: #ff7f50;
            }

        .underline {
            width: 60px;
            height: 4px;
            background-color: #e44d26;
            border-radius: 2px;
            margin-top: -5px;
            margin-bottom: 10px;
            transition: width 0.3s ease;
        }

        .stylish-modal:hover .underline {
            width: 100px;
        }

        .modal-body p {
            color: #333;
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 1rem;
            transition: opacity 0.3s ease;
        }

            .modal-body p:hover {
                opacity: 0.8;
            }

        .image-gallery img {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 3px solid #f1f1f1;
            border-radius: 10px;
            max-width: 100%;
            opacity: 0;
            transform: scale(0.9);
        }

            .image-gallery img.visible {
                opacity: 1;
                transform: scale(1);
            }

            .image-gallery img:hover {
                transform: scale(1.03);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            }

        .animated-modal {
            opacity: 0;
            transform: translateY(-30px);
            transition: all 0.4s ease-in-out;
        }

        .modal.show .animated-modal {
            opacity: 1;
            transform: translateY(0);
        }

        .modal.fade .modal-dialog {
            transition: transform 0.4s ease, opacity 0.4s ease;
            transform: translateY(-20px);
            opacity: 0;
        }

        .modal.fade.show .modal-dialog {
            transform: translateY(0);
            opacity: 1;
        }

        /* Footer */
        .footer {
            background-color: #1D1744;
            color: #ccc;
            padding: 40px 0;
            position: relative;
            z-index: 1;
            width: 100%;
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .footer.visible {
                opacity: 1;
                transform: translateY(0);
                animation: slideInUp 0.5s ease;
            }

        .footer-col {
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }

            .footer-col:hover {
                transform: translateY(-5px);
            }

        .footer-content h4 {
            color: #fff;
            margin-bottom: 15px;
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

            .footer-content h4:hover {
                color: #ffc107;
            }

        .footer-content p, .footer-content a {
            font-size: 0.9rem;
            color: #ccc;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .footer-content a:hover {
                color: #fff;
            }

        .list-unstyled {
            padding-left: 0;
            list-style: none;
        }

        .d-flex {
            display: flex;
        }

        .gap-2 {
            gap: 0.5rem;
        }

        .footer-col i {
            margin-right: 5px;
            color: #ffc107;
            transition: transform 0.3s ease;
        }

            .footer-col i:hover {
                transform: scale(1.2);
            }

        .route-map-container {
            position: absolute;
            top: 35%;
            right: 2%;
            z-index: 0;
            width: 65%;
            max-width: calc(100% - 40px);
            opacity: 0;
            transform: scale(0.9);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .route-map-container.visible {
                opacity: 1;
                transform: scale(1);
            }

            .route-map-container h2 {
                color: #ffc107;
                text-align: left;
                margin-bottom: 5px;
                font-size: 1.5em;
                transition: color 0.3s ease;
            }

                .route-map-container h2:hover {
                    color: #fff;
                }

            .route-map-container iframe {
                display: block;
                width: 100%;
                min-height: 250px;
                border: 1px solid #ccc;
                transition: transform 0.3s ease;
            }

            .route-map-container:hover iframe {
                transform: scale(1.02);
            }

        /* Footer Bottom */
        .footer-bottom {
            background-color: #fd7e14;
            padding: 16px 0;
            text-align: center;
            width: 100%;
        }

            .footer-bottom p {
                margin: 0;
                color: white;
                font-size: 16px;
                font-weight: 500;
                transition: transform 0.3s ease;
            }

                .footer-bottom p:hover {
                    transform: scale(1.05);
                }

        /* Animation Keyframes */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes cardPop {
            0% {
                transform: scale(0.9);
                opacity: 0;
            }

            70% {
                transform: scale(1.05);
                opacity: 1;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.02);
            }

            100% {
                transform: scale(1);
            }
        }

        @@keyframes glow {
            from {
                box-shadow: 0 0 5px #E96C20;
            }

            to {
                box-shadow: 0 0 15px #E96C20;
            }
        }

        @@keyframes modalPop {
            0% {
                transform: scale(0.8);
                opacity: 0;
            }

            70% {
                transform: scale(1.05);
                opacity: 1;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Responsive Styling */
        @@media (max-width: 900px) {
            .card-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .wide-image {
                grid-column: span 2;
            }

                .card, .wide-image img {
                    height: 180px;
                }
        }

        @@media (max-width: 768px) {
            .hero {
                height: 80vh;
            }

            .hero-video {
                height: 60%;
            }

            .hero-text {
                font-size: 18px;
                padding: 15px 40px;
                bottom: 120px;
            }

            .founder-profile {
                flex-direction: column;
                padding: 20px;
                min-height: auto;
                margin-bottom: 40px;
            }

            .founder-image-box {
                flex: 0 0 200px;
                margin-bottom: 20px;
            }

            .founder-text-box {
                padding-left: 0;
                max-width: 100%;
            }

                .founder-text-box h2 {
                    font-size: 1.8rem;
                }

            .quote-mark {
                font-size: 40px;
            }

            .route-map-container {
                position: static;
                width: 100%;
                max-width: 100%;
                margin-top: 20px;
            }

                .route-map-container iframe {
                    min-height: 200px;
                }

            .navbar {
                margin-top: 37px;
            }
        }

        @@media (max-width: 576px) {
            .card-grid {
                grid-template-columns: 1fr;
                padding: 20px;
                margin-bottom: 40px;
            }

            .wide-image {
                grid-column: span 1;
            }

            .hero-text {
                font-size: 16px;
                padding: 10px 30px;
            }

            .founder-image-box {
                flex: 0 0 150px;
            }

            .founder-text-box h2 {
                font-size: 1.5rem;
            }

            .navbar {
                margin-top: 37px;
            }
        }
    </style>
</head>
<body>
