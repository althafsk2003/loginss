@model WebApplication4.Models.EVENT

@{
    ViewData["Title"] = "Event Details";
    Layout = "~/Views/Shared/_ClubsLayout.cshtml";
    var userName = Session["UserName"] as string;
}

<style>
    .event-container {
        font-family: 'Arial', sans-serif;
        color: #333;
        line-height: 1.6;
        background: linear-gradient(135deg, #f9f9f9, #eef2f7);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        margin: 30px auto;
        max-width: 1200px;
        position: relative;
        overflow: hidden;
    }

    .event-banner {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 30px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .event-banner:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .event-title {
        font-size: 2.8rem;
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 25px;
        text-align: center;
        position: relative;
        padding-bottom: 15px;
        background: linear-gradient(to right, #3498db, #8e44ad);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

        .event-title::after {
            content: '';
            position: absolute;
            left: 50%;
            bottom: 0;
            transform: translateX(-50%);
            width: 80px;
            height: 5px;
            background: linear-gradient(to right, #3498db, #8e44ad);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        .event-title:hover::after {
            width: 120px;
        }

    .event-poster {
        width: 100%;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, filter 0.3s ease;
    }

        .event-poster:hover {
            transform: scale(1.08) translateY(-10px);
            filter: brightness(1.1);
        }

    .event-info {
        padding: 30px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.05);
        position: relative;
    }

        .event-info p {
            margin-bottom: 15px;
            font-size: 1rem;
            opacity: 0;
            animation: fadeInLine 0.5s ease forwards;
        }

            .event-info p:nth-child(1) {
                animation-delay: 0.2s;
            }

            .event-info p:nth-child(2) {
                animation-delay: 0.4s;
            }

            .event-info p:nth-child(3) {
                animation-delay: 0.6s;
            }

            .event-info p:nth-child(4) {
                animation-delay: 0.8s;
            }

            .event-info p:nth-child(5) {
                animation-delay: 1s;
            }

            .event-info p:nth-child(n+6) {
                animation-delay: 1.2s;
            }

        .event-info strong {
            color: #3498db;
            transition: color 0.3s ease;
        }

        .event-info p:hover strong {
            color: #e74c3c;
        }

    .emoji-line {
        display: block;
        margin-top: 15px;
        white-space: pre-wrap;
    }

    .bold-heading {
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: 20px;
        color: #3498db;
    }

    .event-details-side {
        background: linear-gradient(to bottom, #f0f8ff, #e6f0fa);
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 25px;
        transition: transform 0.3s ease;
    }

        .event-details-side:hover {
            transform: translateY(-5px);
        }

        .event-details-side h3 {
            font-size: 1.6rem;
            color: #2c3e50;
            margin-bottom: 20px;
            border-bottom: 2px solid #3498db;
            padding-bottom: 10px;
        }

        .event-details-side p {
            margin-bottom: 12px;
            font-size: 1rem;
            color: #555;
        }

            .event-details-side p strong {
                color: #3498db;
            }

        .event-details-side .register-btn, .event-details-side .calendar-btn {
            display: block;
            width: 100%;
            padding: 14px;
            margin-top: 15px;
            border: none;
            border-radius: 6px;
            text-align: center;
            text-decoration: none;
            font-weight: 700;
            cursor: pointer;
            transition: transform 0.2s ease, background-color 0.3s ease, box-shadow 0.3s ease;
        }

        .event-details-side .register-btn {
            background: linear-gradient(to right, #3498db, #2980b9);
            color: white;
        }

        .event-details-side .calendar-btn {
            background: linear-gradient(to right, #e74c3c, #c0392b);
            color: white;
        }

            .event-details-side .register-btn:hover, .event-details-side .calendar-btn:hover {
                transform: scale(1.05) translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                opacity: 1;
            }

        .event-details-side .social-icons {
            margin-top: 25px;
            text-align: center;
        }

            .event-details-side .social-icons a {
                display: inline-block;
                margin: 0 12px;
                font-size: 1.4rem;
                color: #777;
                transition: transform 0.3s ease, color 0.3s ease;
            }

                .event-details-side .social-icons a:hover {
                    transform: rotate(360deg) scale(1.2);
                    color: #3498db;
                }

    @@keyframes fadeInLine {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .comment-section {
        margin-top: 40px;
        padding: 20px;
        background: linear-gradient(to bottom, #f9f9f9, #eef2f7);
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        display: none;
    }

        .comment-section:hover {
            transform: translateY(-5px);
        }

        .comment-section h4 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 20px;
            border-bottom: 2px solid #3498db;
            padding-bottom: 10px;
            font-weight: 700;
        }

    .comment-form .form-control {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        width: 60%;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .comment-form .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
            outline: none;
        }

    .comment-form button {
        background: linear-gradient(to right, #3498db, #2980b9);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
    }

        .comment-form button:hover {
            transform: scale(1.05) translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .comment {
        background: white;
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .comment:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

        .comment p:first-child {
            font-size: 1.1rem;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .comment p:first-child strong {
                color: #3498db;
                transition: color 0.3s ease;
            }

            .comment p:first-child:hover strong {
                color: #e74c3c;
            }

        .comment p:last-child {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .comment .form-control {
            margin-top: 10px;
            border-radius: 8px;
            padding: 10px;
            font-size: 0.95rem;
            width: 50%;
        }

        .comment .btn-secondary {
            background: linear-gradient(to right, #e74c3c, #c0392b);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.3s ease;
        }

            .comment .btn-secondary:hover {
                transform: scale(1.05) translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .comment[style*="margin-left: 40px"] {
            background: #f8f9fa;
            border-left: 4px solid #3498db;
            padding-left: 20px;
        }

    @@keyframes fadeInComment {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .comment {
        animation: fadeInComment 0.5s ease forwards;
    }
</style>

<div class="event-container">
    <div class="mb-4">
        <img src="@Model.EventBannerPath" class="event-banner" alt="@Model.EventName Banner" />
    </div>

    <h2 class="event-title">@Model.EventName.Replace("??", "").Trim()</h2>

    <div class="row">
        <div class="col-md-4 mb-3">
            <img src="@Model.EventPoster" class="event-poster" alt="@Model.EventName Poster" />

            <div class="event-details-side">
                <h3>Event Details</h3>
                <p><strong>Date:</strong> @Model.EventStartDateAndTime.ToString("MMMM d, yyyy")</p>
                <p><strong>Time:</strong> @Model.EventStartDateAndTime.ToString("h:mm tt")</p>
                <p><strong>Location:</strong> ICFAI Foundation, Hyderabad</p>
                @*<p><strong>Organizer:</strong> @Model.OrganizerName</p>*@

                <a href="#" class="register-btn" data-bs-toggle="modal" data-bs-target="#registerModal">Register Now</a>

                <a href="#" class="calendar-btn"
                   onclick="addToGoogleCalendar('@Model.EventName', '@Model.EventStartDateAndTime.ToString("yyyy-MM-ddTHH:mm:ss")', '@Model.EventEndDateAndTime.ToString("yyyy-MM-ddTHH:mm:ss")', 'ICFAI Foundation, Hyderabad')">
                    Add to Calendar
                </a>


                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fas fa-envelope"></i></a>
                </div>
            </div>

            <div class="scan-for-registration">
                <p>Scan here for registration:</p>
                <a href="@Model.RegistrationURL">
                    <img src="@Html.Raw(ViewBag.QRImage)" alt="QR Code" class="qr-code-img" style="width: 150px; height: 150px;" />
                </a>
            </div>
        </div>

        <div class="col-md-8 event-info">
            <p><strong>Description:</strong></p>
            @{
                string[] descriptionLines = Model.EventDescription.Split('\n');
                bool firstParagraph = true;

                foreach (var line in descriptionLines)
                {
                    if (line.Contains("&#x"))
                    {
                        <span class="emoji-line">@Html.Raw(line)</span>
                    }
                    else if (!string.IsNullOrEmpty(line.Trim()))
                    {
                        if (firstParagraph)
                        {
                            <p>@line</p>
                            firstParagraph = false;
                        }
                        else if (line.TrimEnd().EndsWith(":"))
                        {
                            <p class="bold-heading">@line</p>
                        }
                        else
                        {
                            <p>@line</p>
                        }
                    }
                }
            }
        </div>
    </div>
</div>

<button id="toggleComments" class="btn btn-primary">Enable Comments</button>

<hr />
