@model List<WebApplication4.Models.CLUB>

@{
    Layout = "~/Views/Shared/_SubHODLayout.cshtml";
    ViewBag.Title = "Club Requests";
}

@Html.AntiForgeryToken() <!-- ✅ Required for Anti-Forgery Token -->

<style>
    .carousel {
        max-width: 800px;
        margin: auto;
        position: relative;
    }

    .carousel-inner {
        display: flex;
        width: 100%;
    }

    .club-card {
        width: 100%;
        max-width: 900px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        padding: 20px;
        display: flex;
        align-items: center;
        text-align: left;
        margin: auto;
    }

    .club-logo {
        width: 209px;
        height: 208px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 20px;
    }

    .carousel-control-prev, .carousel-control-next {
        background: rgba(0, 0, 0, 0.5);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        position: absolute;
    }

    .carousel-control-prev {
        left: -70px;
    }

    .carousel-control-next {
        right: -70px;
    }

    .reject-reason-box {
        display: none;
        margin-top: 10px;
        padding: 10px;
        width: 400px;
        border: 1px solid #dc3545;
        border-radius: 5px;
        background: #fff5f5;
        min-height: 100px;
    }

        .reject-reason-box .confirm-reject {
            margin-top: 10px;
            display: block;
            width: 100%;
        }
</style>

<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>


<div class="container mt-4">
    <h2 class="text-center mb-4">Club Requests</h2>

    @if (Model != null && Model.Any(c => c.ApprovalStatusID == 1))
    {
        <div id="clubRequestsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{ var pendingClubs = Model.Where(c => c.ApprovalStatusID == 1).ToList(); }

                @for (int i = 0; i < pendingClubs.Count; i++)
                {
                    var club = pendingClubs[i];

                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="d-flex justify-content-center">
                            <div class="club-card">
                                <div>
                                    <img src="@Url.Content(!string.IsNullOrEmpty(club.LogoImagePath) ? club.LogoImagePath : "~/images/default-logo.png")"
                                         class="club-logo" alt="Club Logo" />
                                </div>

                                <div>
                                    <h4 class="text-primary">@club.ClubName</h4>
                                    <p>
                                        <strong>Description:</strong>
                                        <span class="description-text" data-full="@club.Description">
                                            @((club.Description?.Length > 150) ? club.Description.Substring(0, 150) + "..." : club.Description)
                                        </span>
                                        @if (!string.IsNullOrEmpty(club.Description) && club.Description.Length > 150)
                                        {
                                            <a href="javascript:void(0);" class="toggle-description text-primary" data-state="less">Show more</a>
                                        }
                                    </p>
                                    <p><strong>University:</strong> @(club.SUBDEPARTMENT?.DEPARTMENT?.UNIVERSITY?.UniversityNAME ?? "N/A")</p>
                                    <p><strong>Department:</strong> @(club.SUBDEPARTMENT?.DEPARTMENT?.DepartmentName ?? "N/A")</p>
                                    <p><strong>Sub-Department:</strong> @(club.SUBDEPARTMENT?.SubDepartmentName ?? "N/A")</p>
                                    <p><strong>Mentor:</strong> @club.MentorName </p>

                                    <p>
                                        <strong>Status:</strong>
                                        <span class="badge bg-warning">Pending</span>
                                    </p>

                                    <div class="mt-3">
                                        <button type="button" class="btn btn-success approve-btn"
                                                data-clubid="@club.ClubID">
                                            ✅ Approve
                                        </button>

                                        <button type="button" class="btn btn-danger reject-btn"
                                                data-clubid="@club.ClubID">
                                            ❌ Reject
                                        </button>

                                        <div class="reject-reason-box mt-3" id="reject-box-@club.ClubID">
                                            <textarea class="form-control reject-reason" placeholder="Enter rejection reason"></textarea>
                                            <button type="button" class="btn btn-danger mt-2 confirm-reject" data-clubid="@club.ClubID">Confirm Reject</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#clubRequestsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#clubRequestsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
    else
    {
        <p class="text-center text-danger">No pending club requests found.</p>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
$(document).ready(function () {
    // ✅ Get the anti-forgery token from the form
    var token = $('#antiForgeryForm input[name="__RequestVerificationToken"]').val();

    $(".approve-btn").click(function () {
        let clubId = $(this).data("clubid");
        if (confirm("✅ Are you sure you want to approve this club?")) {
            $.ajax({
                url: "@Url.Action("ApproveClub", "SubHOD")",
                type: "POST",
                data: {
                    __RequestVerificationToken: token,
                    id: clubId
                },
                success: function () {
                    alert("🎉 Club Approved!");
                    location.reload();
                },
                error: function (xhr) {
                    alert("❌ Approval failed: " + xhr.responseText);
                }
            });
        }
    });

    $(".reject-btn").click(function () {
        let clubId = $(this).data("clubid");
        $("#reject-box-" + clubId).slideToggle();
    });

    $(".confirm-reject").click(function () {
        let clubId = $(this).data("clubid");
        let reason = $("#reject-box-" + clubId).find(".reject-reason").val().trim();

        if (reason === "") {
            alert("⚠️ Please enter a rejection reason.");
            return;
        }

        $.ajax({
            url: "@Url.Action("RejectClub", "SubHOD")",
            type: "POST",
            data: {
                __RequestVerificationToken: token,
                id: clubId,
                reason: reason
            },
            success: function () {
                alert("🚫 Club Rejected!");
                location.reload();
            },
            error: function (xhr) {
                alert("❌ Rejection failed: " + xhr.responseText);
            }
        });
    });
});
</script>

<script>
    $(document).on('click', '.toggle-description', function () {
        var $this = $(this);
        var $desc = $this.siblings('.description-text');
        var fullText = $desc.data('full');
        var isLess = $this.data('state') === 'less';

        if (isLess) {
            $desc.text(fullText);
            $this.text('Show less').data('state', 'more');
        } else {
            $desc.text(fullText.substring(0, 150) + '...');
            $this.text('Show more').data('state', 'less');
        }
    });
</script>
