@model List<WebApplication4.Models.MentorViewModel>

@{
    ViewBag.Title = "Manage Mentors";
    Layout = "~/Views/Shared/_SubHODLayout.cshtml"; // change if you're using a different layout
}

<h2 class="mb-4">Manage Mentors</h2>

<div style="max-height: 300px; overflow-y: auto; border: 1px solid #ccc; border-radius: 6px;">
    <table class="table table-striped table-bordered text-center mb-0">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int count = 1;
                foreach (var mentor in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@mentor.FullName</td>
                        <td>@mentor.Email</td>
                        <td>
                            @if (mentor.IsActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            @if (mentor.IsActive)
                            {
                                @Html.ActionLink("Deactivate", "DeactivateMentor", new { id = mentor.LoginID }, new { @class = "btn btn-sm btn-warning" })
                            }
                            else
                            {
                                @Html.ActionLink("Activate", "ActivateMentor", new { id = mentor.LoginID }, new { @class = "btn btn-sm btn-success" })
                            }
                        </td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No mentors found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
