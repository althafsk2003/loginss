@model List<WebApplication4.Models.CLUB>
@{
    ViewBag.Title = "Clubs";
    Layout = "~/Views/Shared/_UniversityAdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
    .club-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .club-block {
        display: flex;
        align-items: center;
        background: linear-gradient(to right, #f8f9fa, #ffffff);
        padding: 1.2rem 1.5rem;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        transform: translateY(30px);
        opacity: 0;
        animation-name: revealUp;
        animation-duration: 0.6s;
        animation-fill-mode: forwards;
    }

    .icon-block {
        font-size: 2.3rem;
        color: #28a745;
        margin-right: 1.5rem;
    }

    .info-block h5 {
        margin: 0;
        font-weight: 600;
    }

    .info-block small {
        color: #555;
        display: block;
    }

    .description {
        display: inline;
    }

    .see-more {
        color: #007bff;
        cursor: pointer;
        font-size: 0.85rem;
        margin-left: 5px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .back-button {
        display: flex;
        align-items: center;
        font-size: 0.95rem;
        color: #007bff;
        text-decoration: none;
        font-weight: 500;
    }

        .back-button svg {
            width: 18px;
            height: 18px;
            margin-right: 6px;
        }

    @@keyframes revealUp {
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

<div class="container mt-4">
    <div class="page-header">
        <h3 class="mb-0">🎓 Clubs under <span class="text-primary">@ViewBag.DepartmentName</span></h3>
        <a href="javascript:history.back()" class="back-button">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"
                 xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 19l-7-7 7-7"></path>
            </svg>
            Back
        </a>
    </div>

    <div class="club-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            var club = Model[i];
            var delay = i * 0.2;

            <div class="club-block" style="animation-delay: @($"{delay}s");">
                <div class="icon-block">
                    <i class="fas fa-users"></i>
                </div>
                <div class="info-block flex-grow-1">
                    <h5>@club.ClubName</h5>
                    <small>
                        <span class="description">
                            @(club.Description?.Length > 80
                                ? club.Description.Substring(0, 80) + "..."
                                : club.Description)
                        </span>
                        @if (!string.IsNullOrEmpty(club.Description) && club.Description.Length > 80)
                        {
                            <span class="see-more" onclick="toggleDescription(this)"
                                  data-full="@club.Description">See More</span>
                        }
                    </small>
                </div>
                <a href="@Url.Action("ViewEvents", "UniversityAdmin", new { clubId = club.ClubID })"
                   class="btn btn-outline-success btn-sm">
                    View Details
                </a>
            </div>
        }
    </div>
</div>

<script>
    function toggleDescription(element) {
        let desc = element.previousElementSibling;
        let fullText = element.getAttribute("data-full");

        if (element.innerText === "See More") {
            desc.innerText = fullText;
            element.innerText = "See Less";
        } else {
            desc.innerText = fullText.substring(0, 80) + "...";
            element.innerText = "See More";
        }
    }
</script>
