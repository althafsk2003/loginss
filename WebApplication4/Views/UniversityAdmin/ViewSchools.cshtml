@model List<WebApplication4.Models.DEPARTMENT>

@{
    Layout = "~/Views/Shared/_UniversityAdminLayout.cshtml";
    ViewBag.Title = "View Schools";
}

<!-- ✅ Heading with Action Buttons Aligned Left Above Table -->
<div class="mb-3" style="width: 80%; margin-left: auto; margin-right: auto;">
    <div class="d-flex align-items-center mb-2">
        <h2 class="mb-0 me-3">View Schools</h2>
        <div class="d-flex gap-2">
            <button class="btn btn-primary filter-btn" data-filter="all">View All</button>
            <button class="btn btn-success filter-btn" data-filter="active">Active</button>
            <button class="btn btn-danger filter-btn" data-filter="inactive">Deactivated</button>
        </div>
    </div>
</div>

<!-- ✅ Schools Table Centered Below -->
<div class="d-flex justify-content-center">
    <table class="table table-bordered table-striped" style="width: 80%;">
        <thead>
            <tr>
                <th>University</th>
                <th>School Name</th>
                <th>Director</th>
                <th>SCC</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr class="school-row" data-status="@(dept.IsActive == true ? "active" : "inactive")">
                    <td>@dept.UNIVERSITY.UniversityNAME</td>
                    <td>@dept.DepartmentName</td>
                    <td>@(string.IsNullOrEmpty(dept.DirectorName) ? "-" : dept.DirectorName)</td>
                    <td>@(string.IsNullOrEmpty(dept.HOD) ? "-" : dept.HOD)</td>
                    <td>
                        @if (dept.IsActive == true)
                        {
                            <span class="badge badge-success">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Deactivated</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<!-- ✅ JavaScript for Filtering -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".filter-btn").click(function () {
            var filter = $(this).data("filter");

            $(".school-row").each(function () {
                var status = $(this).data("status");

                if (filter === "all" || filter === status) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>

<!-- ✅ CSS Styling -->
<style>
    .btn {
        margin-left: 10px;
    }

    .table {
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
        margin-top: 10px;
    }

        .table th {
            text-align: center;
            background-color: #343a40;
            color: white;
            padding: 10px; /* reduced padding */
        }

        .table td {
            text-align: center;
            padding: 10px; /* reduced padding */
        }
</style>
