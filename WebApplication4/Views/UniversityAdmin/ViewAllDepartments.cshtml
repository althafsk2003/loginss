@model List<WebApplication4.Models.DEPARTMENT>

@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_UniversityAdminLayout.cshtml";
}

<!-- Font Awesome (Optional) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
    .department-list {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }

    .department-block {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #fdfdfd;
        padding: 1rem 1.5rem;
        border-radius: 12px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.06);
        animation: revealUp 0.5s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    .icon-block {
        font-size: 2rem;
        color: #28a745;
        margin-right: 1.2rem;
    }

    .info-block {
        flex-grow: 1;
    }

        .info-block h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .info-block small {
            color: #6c757d;
        }

    @@keyframes revealUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .department-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .department-header i {
            color: #28a745;
            margin-right: 0.5rem;
        }

        .department-header a {
            color: #007bff;
            text-decoration: none;
        }

    .btn-view-clubs {
        white-space: nowrap;
    }
</style>

<div class="container mt-4">
    <div class="department-header">
        <h4>
            <i class="fas fa-layer-group"></i>
            Departments under your UNIVERSITY
        </h4>
    </div>

    <div class="department-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            var dept = Model[i];
            var delay = i * 0.2; // Reveal delay
            var leader = !string.IsNullOrEmpty(dept.DirectorName) ? $"Director: {dept.DirectorName}" : $"HOD: {dept.HOD}";

            <div class="department-block" style="animation-delay: @($"{delay}s");">
                <div class="d-flex align-items-center">
                    <div class="icon-block">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="info-block">
                        <h5>@dept.DepartmentName</h5>
                        <small>@leader</small>
                    </div>
                </div>
                <a href="@Url.Action("ViewClubs", "UniversityAdmin", new { departmentId = dept.DepartmentID })"
                   class="btn btn-outline-success btn-sm btn-view-clubs">
                    View Clubs
                </a>
            </div>
        }
    </div>
</div>
