@model List<WebApplication4.Models.CLUB>

@{
    Layout = "~/Views/Shared/_UniversityAdminLayout.cshtml";
    ViewBag.Title = "Manage Clubs";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Manage Clubs</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Club Name</th>
                        <th>Description</th>
                        <th>Department</th>
                        <th>Approval Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var club in Model)
                    {
                        <tr>
                            <td>@club.ClubName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(club.Description) && club.Description.Length > 10)
                                {
                                    <span class="short-text">@club.Description.Substring(0, 10)...</span>
                                    <span class="full-text d-none">@club.Description</span>
                                    <a href="javascript:void(0);" class="see-more" onclick="toggleDescription(this)">See More</a>
                                }
                                else
                                {
                                    @club.Description
                                }
                            </td>
                            <td>@club.DEPARTMENT.DepartmentName</td>
                            <td>@club.ApprovalStatusTable.Status</td>
                            <td>
                                @if (club.IsActive == true)
                                {
                                    <a href="@Url.Action("DeactivateClub", "UniversityAdmin", new { id = club.ClubID, page = ViewBag.CurrentPage })"
                                       class="btn btn-warning">Deactivate</a> }
                                else
                                {

                                    <a href="@Url.Action("ActivateClub", "UniversityAdmin", new { id = club.ClubID, page = ViewBag.CurrentPage })"
                                       class="btn btn-success">Activate</a>}
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-container">
            <div class="pagination-info mb-2">
                Showing @ViewBag.FirstItemOnPage to @ViewBag.LastItemOnPage of @ViewBag.TotalItemCount entries
            </div>
            <ul class="pagination">
                @for (var i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("ManageClubs", new { page = i })">@i</a>
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <p class="text-center">No clubs found to manage.</p>
    }
</div>

<!-- ✅ JS for See More / See Less -->
<script>
    function toggleDescription(link) {
        var row = link.closest("td");
        var shortText = row.querySelector(".short-text");
        var fullText = row.querySelector(".full-text");

        if (fullText.classList.contains("d-none")) {
            shortText.classList.add("d-none");
            fullText.classList.remove("d-none");
            link.textContent = "See Less";
        } else {
            shortText.classList.remove("d-none");
            fullText.classList.add("d-none");
            link.textContent = "See More";
        }
    }
</script>

<!-- ✅ CSS Styling -->
<style>
    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .table th {
            text-align: center;
            background-color: #343a40;
            color: white;
            padding: 12px;
        }

        .table td {
            text-align: left;
            padding: 10px;
        }

    .see-more {
        color: #007bff;
        cursor: pointer;
        font-size: 14px;
        margin-left: 5px;
    }

        .see-more:hover {
            text-decoration: underline;
        }

    .btn {
        margin: 5px;
    }

    .btn-warning {
        background-color: #f39c12;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
    }

        .btn-warning:hover {
            background-color: #e67e22;
        }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    /* Pagination Styles */
    .pagination-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .pagination-info {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        gap: 6px;
        margin: 0;
    }

    .page-item {
        display: flex;
    }

    .page-link {
        display: block;
        padding: 8px 14px;
        border-radius: 50%;
        background-color: #e0e0e0;
        color: #333;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.2s ease;
    }

        .page-link:hover {
            background-color: #d0d0d0;
        }

    .page-item.active .page-link {
        background-color: #007bff;
        color: white;
    }
</style>
