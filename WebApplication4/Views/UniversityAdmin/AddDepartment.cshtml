@model List<WebApplication4.Models.DEPARTMENT>

@{
    Layout = "~/Views/Shared/_UniversityAdminLayout.cshtml";
    ViewBag.Title = "Add School";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        <strong>Success!</strong> @TempData["SuccessMessage"]
    </div>
}

<h2 class="text-center mb-5">Add New School</h2>

@using (Html.BeginForm("AddDepartment", "UniversityAdmin", FormMethod.Post, new { @id = "addSchoolForm", @novalidate = "novalidate" }))
{
    <div class="form-container">

        <input type="hidden" name="Universityid" value="@ViewBag.UniversityID" />

        <!-- Dynamic Department Fields -->
        <div id="dynamic-departments">
            <div class="department-entry">
                <div class="form-group">
                    <label class="form-label">Department Name</label>
                    <input type="text" name="Departments[0].DepartmentName" class="form-control department-name" required placeholder="Enter Department Name" />
                    <span class="text-danger" id="DepartmentNameError0"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Does this department have a Director?</label>
                    <select class="form-control has-director" name="Departments[0].HasDirector" data-index="0" required>
                        <option value="">-- Select Option --</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>

                <!-- Director Fields -->
                <div class="director-fields" id="directorFields0" style="display:none;">
                    <div class="form-group">
                        <label class="form-label">Director Name</label>
                        <input type="text" name="Departments[0].DirectorName" class="form-control director-name" placeholder="Enter Director Name" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Director Email</label>
                        <input type="email" name="Departments[0].DirectorEmail" class="form-control director-email" placeholder="Enter Director Email address" />
                    </div>
                </div>

                <!-- HOD Fields -->
                <div class="hod-fields" id="hodFields0" style="display:none;">
                    <div class="form-group">
                        <label class="form-label">Student Clubs Co-Ordinator Name</label>
                        <input type="text" name="Departments[0].HOD" class="form-control department-hod" placeholder="Enter Name" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Student Clubs Co-Ordinator Email</label>
                        <input type="email" name="Departments[0].HOD_Email" class="form-control department-hod-email" placeholder="Enter Email address" />
                    </div>
                </div>

                <button type="button" class="btn btn-danger remove-department mt-2">Remove</button>
            </div>
        </div>

        <button type="button" id="add-department" class="btn btn-secondary mt-2">+ Add Another Department</button>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary submit-btn">
                <i class="fas fa-save"></i> Save Departments
            </button>
        </div>
    </div>
}

<style>
    .form-container {
        max-width: 700px;
        margin: auto;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .submit-btn {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        border: none;
    }

        .submit-btn:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        margin-top: 10px;
        font-size: 15px;
    }

    select.form-control {
        height: 50px;
    }

    .text-danger {
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        var departmentCount = 1;

        $("#add-department").click(function () {
            var html = `
            <div class="department-entry">
                <div class="form-group">
                    <label class="form-label">Department Name</label>
                    <input type="text" name="Departments[${departmentCount}].DepartmentName" class="form-control department-name" required placeholder="Enter Department Name" />
                    <span class="text-danger" id="DepartmentNameError${departmentCount}"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Does this department have a Director?</label>
                    <select class="form-control has-director" name="Departments[${departmentCount}].HasDirector" data-index="${departmentCount}" required>
                        <option value="">-- Select Option --</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>

                <div class="director-fields" id="directorFields${departmentCount}" style="display:none;">
                    <div class="form-group">
                        <label class="form-label">Director Name</label>
                        <input type="text" name="Departments[${departmentCount}].DirectorName" class="form-control director-name" placeholder="Enter Director Name" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Director Email</label>
                        <input type="email" name="Departments[${departmentCount}].DirectorEmail" class="form-control director-email" placeholder="Enter Director Email address" />
                    </div>
                </div>

                <div class="hod-fields" id="hodFields${departmentCount}" style="display:none;">
                    <div class="form-group">
                        <label class="form-label">Student Clubs Co-Ordinator Name</label>
                        <input type="text" name="Departments[${departmentCount}].HOD" class="form-control department-hod" placeholder="Enter Name" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Student Clubs Co-Ordinator Email</label>
                        <input type="email" name="Departments[${departmentCount}].HOD_Email" class="form-control department-hod-email" placeholder="Enter Email address" />
                    </div>
                </div>

                <button type="button" class="btn btn-danger remove-department mt-2">Remove</button>
            </div>
            `;
            $("#dynamic-departments").append(html);
            departmentCount++;
        });

        // Handle Remove
        $(document).on("click", ".remove-department", function () {
            $(this).closest(".department-entry").remove();
        });

        // Handle show/hide director/HOD fields
        $(document).on("change", ".has-director", function () {
            var index = $(this).data("index");
            var selected = $(this).val();

            if (selected === "true") {
                $(`#directorFields${index}`).show();
                $(`#hodFields${index}`).hide();
            } else if (selected === "false") {
                $(`#directorFields${index}`).hide();
                $(`#hodFields${index}`).show();
            } else {
                $(`#directorFields${index}`).hide();
                $(`#hodFields${index}`).hide();
            }
        });
    });
</script>
