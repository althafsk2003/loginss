
@{
    ViewBag.Title = "_RoleSwitcher";
}

@model List<string>

@if (Model != null && Model.Count > 1)
{
    <!-- form posts to Account/SwitchRole -->
    <form action="@Url.Action("SwitchRole", "Admin")" method="post" class="d-inline">
        <select name="role" class="form-select form-select-sm bg-light text-dark" onchange="this.form.submit()">
            @foreach (var r in Model)
            {
                <option value="@r" @(r == (string)Session["CurrentRole"] ? "selected" : "")>@r</option>
            }
        </select>
    </form>
}


