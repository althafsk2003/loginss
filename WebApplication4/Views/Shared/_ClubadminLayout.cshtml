@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Club Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* Header Styling */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #007bff; /* Blue header */
            color: white;
            padding: 15px 20px;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .header .logo-container {
                background-color: white;
                padding: 5px;
                border-radius: 5px;
            }

                .header .logo-container img {
                    height: 40px;
                    width: auto;
                }

            .header h2 {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                margin: 0;
                font-size: 1.75rem;
                color: white;
            }

            .header .hamburger {
                font-size: 28px;
                cursor: pointer;
            }

        /* Sidebar Popup Styling */
        .sidebar-popup {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 2000;
            justify-content: flex-end;
            align-items: flex-start;
        }

        .sidebar {
            width: 300px;
            height: 100%;
            background: white; /* White sidebar */
            color: black; /* Black text */
            padding: 20px;
            overflow-y: auto;
            transition: transform 0.3s ease-in-out;
            transform: translateX(100%);
        }

        .sidebar-popup.active {
            display: flex;
        }

            .sidebar-popup.active .sidebar {
                transform: translateX(0);
            }

        .sidebar a {
            display: block;
            color: black; /* Black text */
            padding: 10px;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

            .sidebar a:hover {
                background: #f1f1f1; /* Hover light gray */
            }

        .sidebar .collapse {
            padding-left: 15px;
        }

        .sidebar .nested-collapse {
            padding-left: 30px;
        }

        .close-btn {
            color: black; /* Close button black */
            font-size: 24px;
            cursor: pointer;
            text-align: right;
            padding: 10px;
        }

        .content {
            padding: 20px;
            width: 100%;
            margin-top: 80px; /* Adjust for header */
            text-align: left;
            color: #333;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header">
        <!-- Left: Logo -->
        <div class="logo-container">
            <img src="~/wwwroot/Images/Logo.svg" alt="Logo">
        </div>

        <!-- Center: Heading -->
        <h2>Clubs & Experiences</h2>

        <!-- Right: Hamburger -->
        <i class="fas fa-bars hamburger"></i>
    </div>

    <!-- Sidebar Popup -->
    <div class="sidebar-popup">
        <div class="sidebar">
            <div class="close-btn"><i class="fas fa-times"></i></div>
            <h4 class="text-center mb-4">Club Admin</h4>

            <!-- Dashboard -->
            <a href="@Url.Action("Index", "ClubAdmin")"><i class="fas fa-home"></i> Dashboard</a>
            <a href="@Url.Action("RequestEvent", "ClubAdmin")"><i class="fas fa-calendar-plus"></i> Request Event</a>

            <!-- Manage Events -->
            <a href="#eventsSubmenu" data-bs-toggle="collapse">
                <i class="fas fa-tasks"></i> Manage Events <i class="fas fa-caret-down float-end"></i>
            </a>
            <div id="eventsSubmenu" class="collapse">
                <a href="@Url.Action("UpcomingEvents", "ClubAdmin")" class="nested-collapse"><i class="fas fa-calendar-check"></i> Upcoming Events</a>
                <a href="@Url.Action("ConcludedEvents", "ClubAdmin")" class="nested-collapse"><i class="fas fa-history"></i> Concluded Events</a>
            </div>

            <a href="@Url.Action("ChangePassword", "ClubAdmin")"><i class="fas fa-key"></i> Change Password</a>
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger mt-3"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Open sidebar
            document.querySelector('.hamburger').addEventListener('click', function () {
                document.querySelector('.sidebar-popup').classList.add('active');
            });

            // Close sidebar
            document.querySelector('.close-btn').addEventListener('click', function () {
                document.querySelector('.sidebar-popup').classList.remove('active');
            });

            // Click outside closes sidebar
            document.querySelector('.sidebar-popup').addEventListener('click', function (e) {
                if (e.target.classList.contains('sidebar-popup')) {
                    document.querySelector('.sidebar-popup').classList.remove('active');
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
