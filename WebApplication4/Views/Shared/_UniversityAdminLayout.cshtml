<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - University Admin Dashboard</title>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @RenderSection("Styles", required: false)

    <style>
        /* Header Styling */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #007bff;
            color: white;
            padding: 15px 20px;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .header .hamburger {
                font-size: 24px;
                cursor: pointer;
            }

        /* Sidebar Popup Styling - now from right */
        .sidebar-popup {
            display: none;
            position: fixed;
            top: 0;
            right: 0; /* Changed from left to right */
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 2000;
            justify-content: flex-end; /* Align sidebar to the right */
            align-items: flex-start;
        }

        .sidebar {
            width: 350px;
            height: 100%;
            background: #ffffff;
            color: black;
            padding: 20px;
            overflow-y: auto;
            transition: transform 0.3s ease-in-out;
            transform: translateX(100%); /* Hidden to the right initially */
        }

        .sidebar-popup.active {
            display: flex;
        }

            .sidebar-popup.active .sidebar {
                transform: translateX(0); /* Slide in from right */
            }

        .sidebar a {
            display: block;
            color: black;
            padding: 10px;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

            .sidebar a:hover {
                background: #f1f1f1;
            }

        .sidebar .collapse {
            padding-left: 15px;
        }

        .sidebar .nested-collapse {
            padding-left: 30px;
        }

        .close-btn {
            color: black;
            font-size: 24px;
            cursor: pointer;
            text-align: right;
            padding: 10px;
        }

        .content {
            padding: 20px;
            width: 100%;
            margin-top: 70px;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header bg-primary text-white py-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <!-- Left: Logo with white background -->
            <div class="d-flex align-items-center" style="background-color:white; padding:5px; border-radius:5px;">
                <img src="~/wwwroot/Images/Logo.svg" alt="App Logo" style="height:40px; width:auto;">
            </div>

            <!-- Center: Heading -->
            <!-- Center: Heading -->
            <h2 class="mb-0 text-center" style="position:absolute; left:50%; transform:translateX(-50%);">
                Clubs & Experiences
            </h2>

            <!-- Right: Role Switcher + Hamburger -->
            <div class="d-flex align-items-center gap-3">
                @Html.Partial("_RoleSwitcher", Session["UserRoles"] as List<string>)
                <i class="fas fa-bars hamburger"></i>
            </div>
        </div>
    </div>




    <!-- Sidebar Popup (Right Side) -->
    <div class="sidebar-popup">
        <div class="sidebar">
            <div class="close-btn"><i class="fas fa-times"></i></div>
            <h4 class="text-center mb-4">University Admin</h4>
            <a href="@Url.Action("Index", "UniversityAdmin")"><i class="fas fa-tachometer-alt"></i> Dashboard</a>

            <!-- Schools Section -->
            <a href="#schoolsSubmenu" data-toggle="collapse">
                <i class="fas fa-school"></i> Schools <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="schoolsSubmenu" class="collapse">
                <a href="@Url.Action("AddDepartment", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-plus"></i> Add School</a>
                <a href="@Url.Action("ManageDepartments", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-cogs"></i> Manage Schools</a>
                <a href="@Url.Action("ViewSchools", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-eye"></i> View Schools</a>
            </div>

            <!-- Mentors Section -->
            <a href="#mentorsSubmenu" data-toggle="collapse">
                <i class="fas fa-user-tie"></i> Mentors <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="mentorsSubmenu" class="collapse">
                <a href="@Url.Action("ViewMentors", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-eye"></i> View Mentors</a>
            </div>

            <!-- Clubs Section -->
            <a href="#clubsSubmenu" data-toggle="collapse">
                <i class="fas fa-users"></i> Clubs <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="clubsSubmenu" class="collapse">
                <a href="@Url.Action("ClubStatus", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-envelope"></i> View Club Status</a>
            </div>

            <a href="@Url.Action("ViewAllDepartments", "UniversityAdmin")" class="nested-collapse quick-stats">
                <i class="fas fa-eye"></i> Quick Stats
            </a>

            <!-- Settings -->
            <a href="@Url.Action("ChangePassword", "UniversityAdmin")"><i class="fas fa-key"></i> Change Password</a>

            <!-- Logout -->
            <a href="@Url.Action("Login", "Admin")" class="btn btn-danger mt-3"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <script>
        $(document).ready(function () {
            // Toggle sidebar popup
            $('.hamburger').click(function () {
                $('.sidebar-popup').addClass('active');
            });
            $('.close-btn').click(function () {
                $('.sidebar-popup').removeClass('active');
            });
            $('.sidebar-popup').click(function (e) {
                if ($(e.target).hasClass('sidebar-popup')) {
                    $('.sidebar-popup').removeClass('active');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
