<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SCC Dashboard</title>
    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        /* Header Styling */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #007bff;
            color: white;
            padding: 20px 20px;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hamburger {
            font-size: 28px;
            cursor: pointer;
            position: absolute;
            left: 20px;
        }

        .header h2 {
            margin: 0;
            font-size: 2rem;
        }

        /* Sidebar Popup Styling */
        .sidebar-popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 2000;
            justify-content: flex-start;
            align-items: flex-start;
        }

        .sidebar {
            width: 350px;
            height: 100%;
            background: #343a40;
            padding: 20px;
            overflow-y: auto;
            transition: transform 0.3s ease-in-out;
            transform: translateX(-100%);
        }

        .sidebar-popup.active {
            display: flex;
        }

            .sidebar-popup.active .sidebar {
                transform: translateX(0);
            }

        .sidebar a {
            display: block;
            color: white;
            padding: 10px;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

            .sidebar a:hover {
                background: #495057;
            }

        .sidebar .collapse {
            padding-left: 15px;
        }

        .sidebar .nested-collapse {
            padding-left: 30px;
        }

        .close-btn {
            color: white;
            font-size: 24px;
            cursor: pointer;
            text-align: right;
            padding: 10px;
        }

        .content {
            padding: 3px;
            width: 100%;
            margin-top: 80px;
        }
    </style>
</head>
<body>


    <!-- Header -->
    <div class="header bg-primary text-white py-3">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <!-- Left: Hamburger -->
                <i class="fas fa-bars hamburger"></i>

                <!-- Center: Heading -->
                <h2 class="mb-0 text-center flex-grow-1">SCC Dashboard</h2>

                <!-- Right: Role Switcher -->
                <div>
                    @Html.Partial("_RoleSwitcher", Session["UserRoles"] as List<string>)
                </div>
            </div>
        </div>
    </div>



    <!-- Sidebar Popup -->
    <div class="sidebar-popup">
        <div class="sidebar bg-dark text-white">
            <div class="close-btn"><i class="fas fa-times"></i></div>
            <a href="@Url.Action("Index", "HOD")"><i class="fas fa-tachometer-alt"></i> Dashboard</a>

            <!-- Mentors Section -->
            <a href="#mentorsSubmenu" data-toggle="collapse" aria-expanded="false">
                <i class="fas fa-user-tie"></i> Mentors <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="mentorsSubmenu" class="collapse">
                <a href="@Url.Action("AddMentor", "HOD")" class="nested-collapse"><i class="fas fa-user-plus"></i> Add Mentor</a>
                <a href="@Url.Action("ManageMentors", "HOD")" class="nested-collapse"><i class="fas fa-tools"></i> Manage Mentors</a>
                <a href="@Url.Action("ViewMentors", "HOD")" class="nested-collapse"><i class="fas fa-eye"></i> View Mentors</a>
            </div>

            <!-- Clubs Section -->
            <a href="#clubsSubmenu" data-toggle="collapse" aria-expanded="false">
                <i class="fas fa-users"></i> Clubs <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="clubsSubmenu" class="collapse">
                <a href="@Url.Action("ClubRequests", "HOD")" class="nested-collapse"><i class="fas fa-envelope-open-text"></i> View Club Requests</a>
                <a href="@Url.Action("ManageClubs", "HOD")" class="nested-collapse"><i class="fas fa-cogs"></i> Manage Clubs</a>
                <a href="@Url.Action("ClubStatus", "HOD")" class="nested-collapse"><i class="fas fa-list"></i> View Clubs</a>
            </div>

            <!-- Direct Manage Events Link -->
            <a href="@Url.Action("EventsForApproval", "HOD")">
                <i class="fas fa-calendar-check"></i> Manage Eventss
            </a>

            <a href="@Url.Action("ChangePassword", "HOD")"><i class="fas fa-key"></i> Change Password</a>
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger mt-3"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>


    <!-- Main Content -->
    <div class="content container">
        @RenderBody()
    </div>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Toggle sidebar popup on hamburger click
            $('.hamburger').click(function () {
                $('.sidebar-popup').addClass('active');
            });

            // Close sidebar popup on close button click
            $('.close-btn').click(function () {
                $('.sidebar-popup').removeClass('active');
            });

            // Close sidebar popup when clicking outside
            $('.sidebar-popup').click(function (e) {
                if ($(e.target).hasClass('sidebar-popup')) {
                    $('.sidebar-popup').removeClass('active');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>