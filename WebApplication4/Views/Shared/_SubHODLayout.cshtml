@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Sub HOD Dashboard</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    @RenderSection("Styles", required: false)

    <style>
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #007bff;
            color: white;
            padding: 15px 20px;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .header .logo-container {
                background-color: white;
                padding: 5px;
                border-radius: 5px;
            }

                .header .logo-container img {
                    height: 40px;
                    width: auto;
                }

            .header h2 {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                margin: 0;
                font-size: 1.75rem;
                color: white;
            }

            .header .hamburger {
                font-size: 28px;
                cursor: pointer;
            }

        .sidebar-popup {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 2000;
            justify-content: flex-end;
            align-items: flex-start;
        }

        .sidebar {
            width: 300px;
            height: 100%;
            background: white; /* Sidebar white */
            color: black; /* Text black */
            padding: 20px;
            overflow-y: auto;
            transition: transform 0.3s ease-in-out;
            transform: translateX(100%);
        }

        .sidebar-popup.active {
            display: flex;
        }

            .sidebar-popup.active .sidebar {
                transform: translateX(0);
            }

        .sidebar a {
            display: block;
            color: black; /* Text black */
            padding: 10px;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

            .sidebar a:hover {
                background: #f1f1f1; /* Light hover */
            }

        .close-btn {
            color: black; /* Close button black */
            font-size: 24px;
            cursor: pointer;
            text-align: right;
            padding: 10px;
        }

        .content {
            padding: 10px;
            width: 100%;
            margin-top: 80px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <!-- Left: Logo -->
        <div class="logo-container">
            <img src="~/wwwroot/Images/Logo.svg" alt="App Logo">
        </div>

        <!-- Center: Heading -->
        <h2>Clubs & Experiences</h2>

        <!-- Right: Role Switcher + Hamburger -->
        <div class="d-flex align-items-center gap-3">
            @Html.Partial("_RoleSwitcher", Session["UserRoles"] as List<string>)
            <i class="fas fa-bars hamburger"></i>
        </div>
    </div>

    <!-- Sidebar Popup -->
    <div class="sidebar-popup">
        <div class="sidebar">
            <div class="close-btn"><i class="fas fa-times"></i></div>
            <h4 class="text-center mb-4">Students Clubs Coordinator</h4>
            <a href="@Url.Action("Index", "SubHOD")"><i class="fas fa-tachometer-alt"></i> Dashboard</a>

            <!-- Mentors Section -->
            <a href="#mentorsSubmenu" data-toggle="collapse" aria-expanded="false">
                <i class="fas fa-user-tie"></i> Mentors <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="mentorsSubmenu" class="collapse">
                <a href="@Url.Action("AddMentor", "SubHOD")" class="nested-collapse"><i class="fas fa-user-plus"></i> Add Mentor</a>
                <a href="@Url.Action("ManageMentors", "SubHOD")" class="nested-collapse"><i class="fas fa-tools"></i> Manage Mentors</a>
                <a href="@Url.Action("ViewMentors", "SubHOD")" class="nested-collapse"><i class="fas fa-eye"></i> View Mentors</a>
            </div>

            <!-- Clubs Section -->
            <a href="#clubsSubmenu" data-toggle="collapse" aria-expanded="false">
                <i class="fas fa-users"></i> Clubs <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="clubsSubmenu" class="collapse">
                <a href="@Url.Action("ClubRequests", "SubHOD")" class="nested-collapse"><i class="fas fa-envelope-open-text"></i> View Club Requests</a>
                <a href="@Url.Action("ManageClubs", "SubHOD")" class="nested-collapse"><i class="fas fa-cogs"></i> Manage Clubs</a>
                <a href="@Url.Action("ViewClubs", "SubHOD")" class="nested-collapse"><i class="fas fa-list"></i> View Clubs</a>
            </div>

            <a href="@Url.Action("ViewEventRequests", "SubHOD")"><i class="fas fa-envelope"></i> View Event Requests</a>
            <a href="@Url.Action("ChangePassword", "SubHOD")"><i class="fas fa-key"></i> Change Password</a>
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger mt-3"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.hamburger').click(function () {
                $('.sidebar-popup').addClass('active');
            });

            $('.close-btn').click(function () {
                $('.sidebar-popup').removeClass('active');
            });

            $('.sidebar-popup').click(function (e) {
                if ($(e.target).hasClass('sidebar-popup')) {
                    $('.sidebar-popup').removeClass('active');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
