@model List<WebApplication4.Models.UNIVERSITY>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Universities & Schools";
    string currentFilter = ViewBag.Filter ?? "All";
}

<h2 class="text-center mb-4">@ViewBag.Title</h2>

<!-- ✅ Buttons for Filtering -->
<div class="text-center mb-3">
    <a href="@Url.Action("ViewAllUniversitiesAndSchools", "Admin", new { page = 1 })" class="btn btn-primary">View All</a>
    <a href="@Url.Action("ViewActiveUniversitiesAndSchools", "Admin", new { page = 1 })" class="btn btn-success">View Active</a>
    <a href="@Url.Action("ViewDeactivatedUniversitiesAndSchools", "Admin", new { page = 1 })" class="btn btn-danger">View Deactivated</a>
</div>

<!-- ✅ Universities & Schools Table -->
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>University Name</th>
            <th>Abbreviation</th>
            <th>Status</th>
            <th>Departments (Schools) with HOD/Director</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var university in Model)
        {
            <tr>
                <td>@university.UniversityNAME</td>
                <td>@university.Abbreviation</td>
                <td>
                    @if (university.IsActive == true)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Deactivated</span>
                    }
                </td>
                <td>
                    <ul>
                        @foreach (var department in university.DEPARTMENTs)
                        {
                            <li>
                                @if (!string.IsNullOrEmpty(department.DirectorName))
                                {
                                    @($"{department.DepartmentName} - {department.DirectorName} (Director)")
                                }
                                else if (!string.IsNullOrEmpty(department.HOD))
                                {
                                    @($"{department.DepartmentName} - {department.HOD} (HOD)")
                                }
                                else
                                {
                                    @($"{department.DepartmentName} - Nill")
                                }

                                @if (department.IsActive == false)
                                {
                                    <span class="badge badge-danger ml-1">Deactivated</span>
                                }
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ Pagination -->
<div class="pagination-container">
    <div class="pagination-info">
        Showing @ViewBag.FirstItemOnPage to @ViewBag.LastItemOnPage of @ViewBag.TotalItemCount entries
    </div>
    <div class="d-flex justify-content-center">
        <ul class="pagination">
            @{
                int currentPage = ViewBag.CurrentPage;
                int totalPages = ViewBag.TotalPages;
                int maxPagesToShow = 5;

                int startPage = Math.Max(1, currentPage - maxPagesToShow / 2);
                int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);

                if ((endPage - startPage) < maxPagesToShow - 1)
                {
                    startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action(ViewBag.ViewType, new { page = i })">@i</a>
                    </li>
                }
            }
        </ul>
    </div>
</div>

<!-- ✅ CSS Styling -->
<style>
    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .table th {
            text-align: center;
            background-color: #343a40;
            color: white;
            padding: 12px;
        }

        .table td {
            text-align: left;
            padding: 10px;
        }

    .btn {
        margin: 5px;
    }

    .pagination-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .pagination-info {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        gap: 6px;
        margin: 0;
    }

    .page-item {
        display: flex;
    }

    .page-link {
        display: block;
        padding: 8px 14px;
        border-radius: 50%;
        background-color: #e0e0e0;
        color: #333;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.2s ease;
    }

        .page-link:hover {
            background-color: #d0d0d0;
        }

    .pagination li.active .page-link {
        background-color: #007bff;
        color: white;
    }
</style>
