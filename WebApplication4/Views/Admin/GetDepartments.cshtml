@model List<WebApplication4.Models.DEPARTMENT>
@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Font Awesome (Optional) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
    .department-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .department-block {
        display: flex;
        align-items: center;
        background: linear-gradient(to right, #f8f9fa, #ffffff);
        padding: 1.2rem 1.5rem;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        transform: translateY(30px);
        opacity: 0;
        animation-name: revealUp;
        animation-duration: 0.6s;
        animation-fill-mode: forwards;
    }

    .icon-block {
        font-size: 2.3rem;
        color: #28a745;
        margin-right: 1.5rem;
    }

    .info-block h5 {
        margin: 0;
        font-weight: 600;
    }

    .info-block small {
        color: #555;
    }

    @@keyframes revealUp {
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Header section with back button */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        color: #2563eb;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
    }

        .back-button:hover {
            color: #1e40af;
        }

        .back-button svg {
            width: 1rem;
            height: 1rem;
            margin-right: 0.25rem;
        }
</style>

<div class="container mt-4">
    <div class="page-header">
        <h3 class="mb-0">📚 Departments under <span class="text-primary">@ViewBag.UniversityName</span></h3>
        <a href="javascript:history.back()" class="back-button">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"
                 xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 19l-7-7 7-7"></path>
            </svg>
            Back
        </a>
    </div>

    <div class="department-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            var dept = Model[i];
            var delay = i * 0.2; // reveal delay
            string responsible = !string.IsNullOrEmpty(dept.DirectorName) ? dept.DirectorName : dept.HOD;

            <div class="department-block" style="animation-delay: @($"{delay}s");">
                <div class="icon-block">
                    <i class="fas fa-building"></i>
                </div>
                <div class="info-block flex-grow-1">
                    <h5>@dept.DepartmentName</h5>
                    <small>
                        @( !string.IsNullOrEmpty(dept.DirectorName)
                            ? $"Director: {dept.DirectorName}"
                            : $"HOD: {dept.HOD}" )
                    </small>
                </div>
                <a href="@Url.Action("GetClubs", "Admin", new { departmentId = dept.DepartmentID })"
                   class="btn btn-outline-success btn-sm">
                    View Clubs
                </a>
            </div>
        }
    </div>
</div>
