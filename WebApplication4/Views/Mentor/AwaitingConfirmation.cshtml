@model IEnumerable<WebApplication4.Models.EVENT>
@{
    ViewBag.Title = "Events Awaiting Your Confirmation";
    Layout = "~/Views/Shared/_MentorLayout.cshtml";
}

<h3 class="mb-4">Events Awaiting Your Confirmation</h3>

@if (!Model.Any())
{
    <div class="alert alert-info">No events need your confirmation.</div>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Event</th>
                <th>Club</th>
                <th>Original Budget</th>
                <th>Revised Budget</th>
                <th class="text-center">Signed Form</th>
                <th class="text-center">Decision</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model)
            {
                <tr>
                    <td>@ev.EventName</td>
                    <td>@ev.CLUB.ClubName</td>
                    <td>₹@ev.EventBudget</td>
                    <td>₹@ev.ApprovedAmount</td>
                    <td class="text-center">
                        <a href="@Url.Content(ev.EventFormPath)" target="_blank"
                           class="btn btn-sm btn-info">View PDF</a>
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("ConfirmBudget", "Mentor", FormMethod.Post, new { id = "form-" + ev.EventID }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("eventId", ev.EventID)
                            @Html.Hidden("accept", "true", new { id = "accept-" + ev.EventID })
                            @Html.Hidden("rejectReason", "", new { id = "rejectReason-" + ev.EventID })

                            <button type="submit" class="btn btn-success btn-sm me-1">Approve</button>

                            <button type="button"
                                    class="btn btn-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#rejectModal-@ev.EventID">
                                Reject
                            </button>
                        }

                        <!-- Reject Reason Modal -->
                        <div class="modal fade" id="rejectModal-@ev.EventID" tabindex="-1" aria-labelledby="rejectLabel-@ev.EventID" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="rejectLabel-@ev.EventID">Reject Event: @ev.EventName</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <label for="reasonInput-@ev.EventID" class="form-label">Reason for Rejection:</label>
                                        <textarea class="form-control" id="reasonInput-@ev.EventID" rows="3" required></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-danger"
                                                onclick="submitRejectForm(@ev.EventID)">
                                            Submit Rejection
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        function submitRejectForm(eventId) {
            const reasonInput = document.getElementById('reasonInput-' + eventId);
            const reason = reasonInput.value.trim();

            if (!reason) {
                alert("Please enter a reason for rejection.");
                return;
            }

            document.getElementById('rejectReason-' + eventId).value = reason;
            document.getElementById('accept-' + eventId).value = "false";

            // Submit the corresponding form
            document.getElementById('form-' + eventId).submit();
        }
    </script>
}
