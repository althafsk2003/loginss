@model WebApplication4.Models.EventDetailsViewModel
@{
    Layout = "~/Views/Shared/_MentorLayout.cshtml";
}

<h2 class="mb-4">@Model.Event.EventName</h2>

<form asp-action="MentorApproveEventDetails" asp-controller="Mentor" method="post" id="approvalForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="EventId" value="@Model.Event.EventID" />

    <!-- Brochure -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h4 class="mb-0">Brochure</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Event.EventBrochure))
            {
                <p>
                    <a href="@Url.Content(Model.Event.EventBrochure)" target="_blank" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i> View Brochure
                    </a>
                </p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input approval-change" type="radio" name="ApprovedBrochure" value="1" id="brochureApprove" />
                    <label class="form-check-label" for="brochureApprove">Approve</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input approval-change" type="radio" name="ApprovedBrochure" value="0" id="brochureReject" />
                    <label class="form-check-label" for="brochureReject">Reject</label>
                </div>
            }
            else
            {
                <p class="text-muted">No brochure uploaded.</p>
            }
        </div>
    </div>

    <!-- Photos -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h4 class="mb-0">Photos</h4>
        </div>
        <div class="card-body">
            @{
                var photos = Model.EventPhotos.Where(p => p.MediaType == "Photo").ToList();
            }
            @if (photos.Any())
            {
                <div class="row">
                    @foreach (var photo in photos)
                    {
                        <div class="col-md-3 text-center mb-3">
                            <img src="@Url.Content(photo.Path)" class="img-fluid rounded border mb-2 photo-preview" style="max-height:150px; cursor:pointer;" data-bs-toggle="modal" data-bs-target="#imageModal" data-src="@Url.Content(photo.Path)" />
                            <div class="form-check">
                                <input class="form-check-input approval-change" type="checkbox" name="ApprovedPhotoIds[]" value="@photo.Id" id="photo-@photo.Id" />
                                <label class="form-check-label" for="photo-@photo.Id">Approve</label>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No photos available.</p>
            }
        </div>
    </div>

    <!-- Videos -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h4 class="mb-0">Videos</h4>
        </div>
        <div class="card-body">
            @{
                var videos = Model.EventPhotos.Where(p => p.MediaType == "Video").ToList();
            }
            @if (videos.Any())
            {
                <div class="row">
                    @foreach (var video in videos)
                    {
                        <div class="col-md-6 text-center mb-3">
                            <video class="w-100 mb-2 border rounded approval-change" controls>
                                <source src="@Url.Content(video.Path)" type="video/mp4" />
                                Your browser does not support the video tag.
                            </video>
                            <div class="form-check">
                                <input class="form-check-input approval-change" type="checkbox" name="ApprovedVideoIds[]" value="@video.Id" id="video-@video.Id" />
                                <label class="form-check-label" for="video-@video.Id">Approve</label>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No videos available.</p>
            }
        </div>
    </div>

    <!-- Winners -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h4 class="mb-0">Winners</h4>
        </div>
        <div class="card-body">
            @if (Model.EventWinners != null && Model.EventWinners.Any())
            {
                <div class="list-group">
                    @foreach (var winner in Model.EventWinners)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@winner.WinnerName - @winner.Prize</span>
                            <div class="form-check">
                                <input class="form-check-input approval-change" type="checkbox" name="ApprovedWinnerIds[]" value="@winner.Id" id="winner-@winner.Id" />
                                <label class="form-check-label" for="winner-@winner.Id">Approve</label>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No winners available.</p>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success px-4" id="submitBtn" disabled>Submit Approval</button>
</form>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content rounded shadow-sm">
            <div class="modal-body p-0">
                <img id="modalImage" src="" class="img-fluid w-100 rounded" />
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            // Enable submit button when any approval input changes
            $('.approval-change').on('change', function () {
                $('#submitBtn').prop('disabled', false);
            });

            // Image preview in modal
            $('.photo-preview').on('click', function () {
                var src = $(this).data('src');
                $('#modalImage').attr('src', src);
            });
        });
    </script>
}
