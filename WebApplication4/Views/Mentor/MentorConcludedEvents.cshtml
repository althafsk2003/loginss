@model IEnumerable<WebApplication4.Models.EVENT>
@{
    Layout = "~/Views/Shared/_MentorLayout.cshtml";
}

<h2 class="mb-4">
    <i class="bi bi-calendar-check text-success"></i>
    Concluded Events – @ViewBag.ClubName
</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var evnt in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg h-100" style="border-radius: 12px; border: 1px solid #e0e0e0;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">
                            <i class="bi bi-flag-fill text-primary"></i> @evnt.EventName
                        </h5>
                        <p class="card-text mb-3">
                            <span class="badge" style="background-color: #007bff; color: white; font-weight: 500; padding: 5px 10px; border-radius: 8px;">
                                @evnt.EventStartDateAndTime.ToString("dd MMM yyyy")
                            </span>
                        </p>
                        <a class="btn btn-outline-primary mt-auto w-100"
                           href="@Url.Action("MentorConcludedEventDetails", "Mentor", new { id = evnt.EventID })">
                            <i class="bi bi-eye"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        No concluded events found for this club.
    </div>
}
