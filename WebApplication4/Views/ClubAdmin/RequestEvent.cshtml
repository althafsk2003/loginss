    function validateEventPoster() {
        const poster = document.getElementById('EventPoster');
        const error = document.getElementById('EventPosterError');
        const allowedTypes = ['image/jpeg', 'image/png', 'image/jpg', 'image/webp'];
        const maxSize = 2 * 1024 * 1024; // 2 MB
        const minWidth = 800;
        const minHeight = 600;
        const maxWidth = 3000;
        const maxHeight = 3000;
        const targetAspectRatios = [4 / 3, 16 / 9]; // 1.333 and 1.778
        const aspectRatioTolerance = 0.1;

        if (!poster.files.length) {
            error.textContent = "Event Poster is required.";
            error.style.display = "block";
            poster.classList.add('is-invalid');
            return false;
        }

        const file = poster.files[0];
        if (!allowedTypes.includes(file.type)) {
            error.textContent = "Only JPG, JPEG, PNG, or WEBP files are allowed.";
            error.style.display = "block";
            poster.classList.add('is-invalid');
            return false;
        }

        if (file.size > maxSize) {
            error.textContent = "Image must be smaller than 2MB.";
            error.style.display = "block";
            poster.classList.add('is-invalid');
            return false;
        }

        // Check dimensions and aspect ratio
        return new Promise((resolve) => {
            const img = new Image();
            const reader = new FileReader();

            reader.onload = (e) => {
                img.src = e.target.result;

                img.onload = () => {
                    const width = img.width;
                    const height = img.height;
                    const aspectRatio = width / height;

                    if (width < minWidth || height < minHeight) {
                        error.textContent = "Image must be at least 800x600 pixels.";
                        error.style.display = "block";
                        poster.classList.add('is-invalid');
                        resolve(false);
                        return;
                    }

                    if (width > maxWidth || height > maxHeight) {
                        error.textContent = "Image must not exceed 3000x3000 pixels.";
                        error.style.display = "block";
                        poster.classList.add('is-invalid');
                        resolve(false);
                        return;
                    }

                    const isValidAspectRatio = targetAspectRatios.some(
                        (ratio) =>
                            Math.abs(aspectRatio - ratio) <= aspectRatioTolerance
                    );

                    if (!isValidAspectRatio) {
                        error.textContent = "Image should have a 4:3 or 16:9 aspect ratio.";
                        error.style.display = "block";
                        poster.classList.add('is-invalid');
                        resolve(false);
                        return;
                    }

                    error.style.display = "none";
                    poster.classList.remove('is-invalid');
                    resolve(true);
                };

                img.onerror = () => {
                    error.textContent = "Error loading image.";
                    error.style.display = "block";
                    poster.classList.add('is-invalid');
                    resolve(false);
                };
            };

            reader.readAsDataURL(file);
        });
    }

