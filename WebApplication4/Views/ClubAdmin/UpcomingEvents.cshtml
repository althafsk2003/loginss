@model WebApplication4.Models.UpcomingEventsViewModel

@{
    ViewBag.Title = "Upcoming Events";
    Layout = "~/Views/Shared/_ClubadminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">📅 Upcoming Events</h2>

    <!-- Buttons to toggle between sections -->
    <div class="btn-group mb-4" role="group" aria-label="Event Filters">
        <button type="button" class="btn btn-primary" id="btnUpcoming">Upcoming</button>
        <button type="button" class="btn btn-secondary" id="btnPosted">Posted</button>
    </div>

    <!-- Section 1: Approved but Not Yet Posted Events -->
    <div class="card mb-5" id="sectionUpcoming">
        <div class="card-header bg-warning text-dark">
            Approved but Not Yet Posted Events
        </div>
        <div class="card-body">
            @if (Model.ApprovedNotPostedEvents != null && Model.ApprovedNotPostedEvents.Any())
            {
                <div class="table-wrapper">
                    <table class="table table-striped table-fixed">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ev in Model.ApprovedNotPostedEvents)
                            {
                                <tr>
                                    <td><div class="ellipsis-hover" title="@ev.EventName">@ev.EventName</div></td>
                                    <td><div class="ellipsis-hover" title="@ev.EventDescription">@ev.EventDescription</div></td>
                                    <td>@ev.EventStartDateAndTime.ToString("dd MMM yyyy hh:mm tt")</td>
                                    <td>@ev.EventEndDateAndTime.ToString("dd MMM yyyy hh:mm tt")</td>
                                    <td>
                                        <a href="@Url.Action("PostEvent", "ClubAdmin", new { eventId = ev.EventID })" class="btn btn-success btn-sm post-button">
                                            ✅ Post to Website
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No approved events awaiting posting.</p>
            }
        </div>
    </div>

    <!-- Section 2: Posted Upcoming Events -->
    <div class="card" id="sectionPosted">
        <div class="card-header bg-info text-white">
            Posted Upcoming Events
        </div>
        <div class="card-body">
            @if (Model.PostedUpcomingEvents != null && Model.PostedUpcomingEvents.Any())
            {
                <div class="table-wrapper">
                    <table class="table table-hover table-fixed">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ev in Model.PostedUpcomingEvents)
                            {
                                <tr>
                                    <td><div class="ellipsis-hover" title="@ev.EventName">@ev.EventName</div></td>
                                    <td>@ev.EventStartDateAndTime.ToString("dd MMM yyyy hh:mm tt")</td>
                                    <td>@ev.EventEndDateAndTime.ToString("dd MMM yyyy hh:mm tt")</td>
                                    <td>
                                        <a href="@Url.Action("EditEvent", "ClubAdmin", new { eventId = ev.EventID })" class="btn btn-warning btn-sm">
                                            ✏️ Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No upcoming events have been posted yet.</p>
            }
        </div>
    </div>
</div>

<style>
    .post-button {
        display: block;
        margin: 0 auto;
        text-align: center;
    }

    .table-fixed {
        table-layout: fixed;
        width: 100%;
    }

        .table-fixed th:nth-child(1),
        .table-fixed td:nth-child(1) {
            width: 20%;
        }

        .table-fixed th:nth-child(2),
        .table-fixed td:nth-child(2) {
            width: 40%;
        }

        .table-fixed th:nth-child(3),
        .table-fixed td:nth-child(3),
        .table-fixed th:nth-child(4),
        .table-fixed td:nth-child(4) {
            width: 15%;
        }

        .table-fixed th:nth-child(5),
        .table-fixed td:nth-child(5) {
            width: 10%;
        }

    /* Scrollable table body */
    .table-wrapper {
        max-height: 350px;
        overflow-y: auto;
    }

    .table-fixed thead th {
        position: sticky;
        top: 0;
        background-color: #fff;
        z-index: 1;
    }

    /* Hide Posted section by default */
    #sectionPosted {
        display: none;
    }

    /* Button styling */
    .btn-group .btn {
        margin-right: 10px;
    }

    .btn-primary, .btn-secondary {
        transition: background-color 0.3s ease;
    }

        .btn-primary.active, .btn-secondary.active {
            background-color: #0056b3 !important;
            color: white;
        }

    /* Hover-to-expand for event name & description */
    .ellipsis-hover {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        max-width: 100%;
        cursor: pointer;
        position: relative;
    }

        .ellipsis-hover:hover {
            white-space: normal;
            overflow: visible;
            background-color: #f8f9fa;
            z-index: 100;
            position: absolute;
            width: max-content;
            max-width: 500px;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sectionUpcoming').show();
            $('#btnUpcoming').addClass('active');

            $('#btnUpcoming').click(function () {
                $('#sectionUpcoming').show();
                $('#sectionPosted').hide();
                $('#btnUpcoming').addClass('active');
                $('#btnPosted').removeClass('active');
            });

            $('#btnPosted').click(function () {
                $('#sectionPosted').show();
                $('#sectionUpcoming').hide();
                $('#btnPosted').addClass('active');
                $('#btnUpcoming').removeClass('active');
            });
        });
    </script>
}
